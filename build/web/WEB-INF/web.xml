<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>servlets.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>servlets.signup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>bookSell</servlet-name>
        <servlet-class>servlets.bookSell</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>soldBookUpdate</servlet-name>
        <servlet-class>servlets.soldBookUpdate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>bkashPayment</servlet-name>
        <servlet-class>servlets.bkashPayment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ccdcPayment</servlet-name>
        <servlet-class>servlets.ccdcPayment</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signupnow</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>bookSell</servlet-name>
        <url-pattern>/userSellBook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>soldBookUpdate</servlet-name>
        <url-pattern>/soldBookUpdated</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>bkashPayment</servlet-name>
        <url-pattern>/bkashPaymentupdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ccdcPayment</servlet-name>
        <url-pattern>/ccdcPaymentupdate</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
